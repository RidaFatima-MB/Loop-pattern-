#include <iostream>
using namespace std;

int main()
{
    int a, b, c;

    for (a = 4; a >= 1; a--)   // number of rows
    {
        for (b = 0; b < 4 - a; b++)  // spaces
        {
            cout << "  ";
        }

        for (c = 1; c <= a; c++)     // stars
        {
            cout << "* ";
        }

        cout << endl;
    }

    return 0;
}
